<Window x:Class="MyWebSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWebSearch"
        mc:Ignorable="d"
        Title="MainWindow" Height="330.113" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="99*"/>
            <ColumnDefinition Width="89*"/>
            <ColumnDefinition Width="118*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Button x:Name="ButtonSearch" Content="Search" Click="Button_Click" Grid.Row="1" Grid.Column="1"/>
        <TextBox x:Name="TextBoxSearch1" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap"/>
        <TextBox x:Name="TextBoxSearch2" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="5" TextWrapping="Wrap"/>
        <ListView x:Name="ListViewDoc" Grid.ColumnSpan="3" Grid.Column="4" Grid.Row="1" Grid.RowSpan="9" MouseRightButtonUp="ListViewDoc_MouseRightButtonUp" >
            <ListView.View>
                <GridView>                    <GridViewColumn Header="Name   " DisplayMemberBinding="{Binding Name}"/>                    <GridViewColumn Header="google" DisplayMemberBinding="{Binding SearchWithGoogle}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBox x:Name="TextBoxAddDoc" Grid.ColumnSpan="3" Grid.Column="4" Grid.Row="11" TextWrapping="Wrap"/>
        <Button x:Name="ButtonAddDoc" Content="Add" Grid.Column="1" Grid.Row="11" Click="ButtonAddDoc_Click" />
        <TextBox x:Name="TextBoxSearch3" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="7" TextWrapping="Wrap"/>
        <CheckBox x:Name="CheckBoxGoogle" Content="Google" Grid.Column="2" Grid.Row="11" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
